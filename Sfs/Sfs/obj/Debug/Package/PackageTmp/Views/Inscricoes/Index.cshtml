@model List<Sfs.Models.Inscricao>
@{
    ViewBag.Title = "Index";
}

Organize aqui as suas inscrições por prioridade.
<table>
    <thead>
        <tr>
            <td>
                Atividade
            </td>
            <td>
                Prioridade
            </td>
        </tr>
    </thead>
    @foreach (var item in Model) {
        <tr>
            <td>
                @item.Atividade.Descricao
            </td>
            <td>
                @item.Prioridade
            </td>
            <td>
                @if (Model.IndexOf(item) > 0) {
                    @SfsHtml.IconActionLink("", "SubirInscricao", "Inscricoes", new { idInscricao = item.Id }, "arrow_up_green.png")
                }
                
                @if (Model.IndexOf(item) < Model.Count - 1) {
                    @SfsHtml.IconActionLink("", "DescerInscricao", "Inscricoes", new { idInscricao = item.Id }, "arrow_down_red.png")
                }
                
            </td>
        </tr>
    }
</table>
