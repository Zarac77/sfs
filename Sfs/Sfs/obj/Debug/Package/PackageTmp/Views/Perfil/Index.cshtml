@using Sfs.Models

@model IEnumerable<Perfil>

@{
    ViewBag.Title = "Index";
}

<h2>Perfis de acesso</h2>

<p>
    @SfsHtml.CreateActionLink("Novo perfil", "Perfil", null)
</p>

<table>
    <thead>
        <tr>
            <th>
                Nome
            </th>
            <th>
                Descrição
            </th>
            <th></th>
        </tr>
    </thead>

@foreach (var item in Model) {
    <tr class="linha">
        <td>
            @SfsHtml.SmallImg("perfil.png", String.Empty)
			@item.Nome
        </td>
        <td>
			@item.Descricao
        </td>
        <td>
            @SfsHtml.EditActionLink("Perfil", new { id = item.Id })
            @SfsHtml.DetailsActionLink("Perfil", new { id = item.Id })
            @SfsHtml.DeleteActionLink("Perfil", new { id = item.Id })
        </td>
    </tr>
}

</table>