@model Sfs.Models.Atividade

@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<fieldset>
    <legend>Atividade</legend>

    <div class="display-label">Descricao</div>
    <div class="display-field">@Model.Descricao</div>

    <div class="display-label">DataHoraInicio</div>
    <div class="display-field">@String.Format("{0:g}", Model.DataHoraInicio)</div>

    <div class="display-label">DataHoraFim</div>
    <div class="display-field">@String.Format("{0:g}", Model.DataHoraFim)</div>

    <div class="display-label">DataLimiteInscricao</div>
    <div class="display-field">@String.Format("{0:g}", Model.DataLimiteInscricao)</div>

    <div class="display-label">DataLimiteCancelamento</div>
    <div class="display-field">@String.Format("{0:g}", Model.DataLimiteCancelamento)</div>

    <div class="display-label">NumeroVagas</div>
    <div class="display-field">@Model.NumeroVagas</div>

    <div class="display-label">Aprovada</div>
    <div class="display-field">@Model.Aprovada</div>

    <div class="display-label">Inscricoes</div>
    <div class="display-field">@(Model.Inscricoes == null ? "None" : Model.Inscricoes.Count.ToString())</div>
</fieldset>
@using (Html.BeginForm()) {
    <p>
        <input type="submit" value="Delete" /> |
        @Html.ActionLink("Back to List", "Index")
    </p>
}


